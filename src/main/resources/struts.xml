<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="default" extends="struts-default">
        <action name="" class="com.example.struts2.struts.action.HomeAction">
            <result name="success">/home.jsp</result>
        </action>
        <action name="listFiles" class="com.example.struts2.struts.action.ListFilesAction">
            <result name="success">/list-files.jsp</result>
        </action>
        <action name="uploadFile" class="com.example.struts2.struts.action.UploadFileAction">
            <interceptor-ref name="completeStack"/>
            <interceptor-ref name="execAndWait">
                <param name="delay">500</param>
                <param name="delaySleepInterval">100</param>
            </interceptor-ref>
            <result name="input">/upload-file.jsp</result>
            <result name="wait">/upload-file.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">listFiles</param>
            </result>
        </action>
    </package>
</struts>